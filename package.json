{
  "name": "node-template",
  "version": "1.0.0",
  "description": "Template repo for using by the suite.",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "start": "npm run build && node dist/server.js",
    "start:local": "ts-node-dev 'src/index.ts'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ty-ti/node-template.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "javascript",
    "typescript",
    "api"
  ],
  "author": "Ricardo Malnati",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ty-ti/node-template/issues"
  },
  "homepage": "https://github.com/Ty-ti/node-template#readme",
  "dependencies": {
    "-": "0.0.1",
    "module-alias": "^2.2.2",
    "supertest": "^6.0.1"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "typescript": "^4.1.2"
  }
}
